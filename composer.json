{
    "name": "alcamo/http",
    "description": "Extension of some laminas classes, in particular to stream process output",
    "keywords": [ "http", "process" ],
    "license": "Apache-2.0",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/rv1971/alcamo-core"
        },
        {
            "type": "vcs",
            "url": "https://github.com/rv1971/alcamo-html-creation"
        },
        {
            "type": "vcs",
            "url": "https://github.com/rv1971/alcamo-process"
        },
        {
            "type": "vcs",
            "url": "https://github.com/rv1971/alcamo-rdfa"
        },
        {
            "type": "vcs",
            "url": "https://github.com/rv1971/alcamo-xml-creation"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "7.3 - 7.4",
        "guzzlehttp/psr7": "^1",
        "laminas/laminas-diactoros": "^2.5",
        "laminas/laminas-httphandlerrunner": "^1.3",
        "alcamo/core": "dev-master",
        "alcamo/process": "dev-master",
        "alcamo/rdfa": "dev-master"
    },
    "autoload": {
	"psr-4": {
	    "alcamo\\http\\": "src/"
	}
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "test": [
            "phpunit tests",
            "phpcs --standard=PSR12 -p -s src",
            "phpcs --standard=PSR12 -p -s --exclude=PSR1.Classes.ClassDeclaration,PSR1.Files.SideEffects tests"
        ],
        "fix": [
            "phpcbf --standard=PSR12 -p -s src",
            "phpcbf --standard=PSR12 -p -s --exclude=PSR1.Classes.ClassDeclaration,PSR1.Files.SideEffects tests"
        ]
    }
}
